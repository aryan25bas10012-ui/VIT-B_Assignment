def get_student_info():
    """Gets student information from the user."""
    while True:
        try:
            name = input("Enter student's name: ")
            roll_number = input("Enter student's roll number: ")
            student_sem = input("Enter student's semester: ")
            date_of_birth = input("Enter student's date of birth (DD/MM/YYYY): ")
            # Basic date format validation (can be improved with a library like 'datetime')
            if "/" in date_of_birth:
                return name, roll_number, student_sem, date_of_birth
            else:
                print("Invalid date format. Please use DD/MM/YYYY.")
        except:
            print("Invalid input. Please enter valid information.")

def get_subject_details():
    """Gets subject names and marks from the user."""
    while True:
        try:
            n = int(input("Enter the number of subjects: "))
            if n > 0:
                break
            else:
                print("Number of subjects must be greater than 0.")
        except ValueError:
            print("Invalid input. Please enter a number.")

    subjects = []
    for i in range(n):
        subject = input(f"Enter subject {i+1}: ")
        subjects.append(subject)

    marks = {}
    for subject in subjects:
        while True:
            try:
                mark = float(input(f"Enter marks obtained in {subject}: "))
                if 0 <= mark <= 100:
                    marks[subject] = mark
                    break  # Exit the loop if the input is valid
                else:
                    print("Invalid input. Marks should be between 0 and 100.")
            except ValueError:
                print("Invalid input. Please enter a number.")
    return subjects, marks

def calculate_grade(percentage):
    """Calculates the grade and remark based on the percentage."""
    if percentage >= 90:
        grade = 'A+'
        remark = "EXCELLENT WORK!, KEEP IT UP!"
    elif percentage >= 80:
        grade = 'A'
        remark = "VERY GOOD!, KEEP IT UP!"
    elif percentage >= 70:
        grade = 'B+'
        remark = "GOOD JOB!, YOU CAN DO BETTER!"
    elif percentage >= 60:
        grade = 'B'
        remark = "FAIR EFFORT!, IMPROVE MORE!"
    elif percentage >= 50:
        grade = 'C'
        remark = "NEEDS IMPROVEMENT!, WORK HARDER!"
    elif percentage >= 40:
        grade = 'D'
        remark = "PASSING GRADE!, BUT STRIVE FOR BETTER!"
    else:
        grade = 'F'
        remark = "FAILED!, DON'T GIVE UP, KEEP TRYING!"
    return grade, remark

def print_report_card(name, roll_number, student_sem, date_of_birth, subjects, marks, total_marks, percentage, grade, remark):
    """Prints the student report card."""
    print("\n----- STUDENT REPORT CARD -----")
    print(f"Name: {name}")
    print(f"Roll Number: {roll_number}")
    print(f"Semester: {student_sem}")
    print(f"Date of Birth: {date_of_birth}")

    print("\n------Subject-wise Marks------")
    for subject, mark in marks.items():
        print(f"{subject}: {mark}/100")
    print("===============================")

    print(f"\nTotal Marks: {total_marks}/{len(subjects) * 100}")
    print(f"Percentage: {percentage:.2f}%")
    print(f"Grade: {grade}")
    print(f"Remark: {remark}")
    print("-------------------------------")
